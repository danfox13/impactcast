<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/client/public/style.css">
    <script src="/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
<% include ../templates/header.ejs %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading text-cente"><h1><%= heading %></h1></div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>View Project</th>
                        <th>Project Code</th>
                        <th>Project Title</th>
                        <th>Change Items</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% projects.forEach(function(project){ %>
                    <tr>
                        <td><a href="/project/<%= project.projectCode %>" class="btn btn-success" role="button">View</a>
                        </td>
                        <td><%= project.projectCode %></td>
                        <td><%= project.projectTitle %></td>
                        <td>
                            <% project.changeItems.forEach(function(changeItem){ %>
                            <a href="/project/<%= project.projectCode %>/<%= changeItem.changeTitle %>">
                                <%= changeItem.changeTitle %>
                            </a><br/>
                            <% }); %>
                        </td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>