<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/style.css">
    <script src="/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        function filterUser() {
            // Declare variables
            var input, filter, table, tr, td, i;
            input = document.getElementById("userSearch");
            //console.log("input = " + input);
            filter = input.value.toUpperCase();
            //console.log("filter = " + filter);
            table = document.getElementById("userTable");
            //console.log("table = " + table);
            //console.log("thead = " + table.getElementsByTagName("thead")[0]);
            tr = table.getElementsByTagName("tr");
            //console.log("tr = " + tr);
            for(t in tr){console.log("Item - " + t);}
            columns = [1, 3, 4];

            // Loop through all table rows, and hide those who don't match the search query
            for (i = 1; i < tr.length; i++) {
                for (j = 0; j < columns.length; j++) {
                    td = tr[i].getElementsByTagName("td")[columns[j]];
                    console.log(td);
                    if (td) {
                        if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                            console.log("matched");
                            tr[i].style.display = "";
                            break;
                        } else {
                            console.log("not matched");
                            tr[i].style.display = "none";
                        }
                    }
                }
            }
        }
    </script>
</head>
<body>
<% include ../templates/header.ejs %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group has-feedback">
                        <input type="text" class="search-query form-control"
                       id="userSearch" onkeyup="filterUser()" placeholder="Filter Users">
                        <i class="glyphicon glyphicon-search form-control-feedback"></i>
                    </div>
                </div>
            <div class="col-sm-4">
                <h1><%= heading %></h1>
            </div>
            <div class="col-sm-4">
                <% if(viewer.isAdmin){%><!-- If an admin is viewing, they can add users -->
                <a href="/addUser" class="label label-info"
                   role="button">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add User</a>
                <%}%>
            </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="userTable" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th class="text-center">
                        <% if(viewer.isAdmin){%>
                        User Actions
                        <%} else {%>
                        View User
                        <%}%>
                        </th>
                        <th>Email</th>
                        <th>Permissions</th>
                        <th>Name</th>
                        <th>Slack Handle</th>
                        <% if(viewer.isAdmin){%>
                        <th>Admin Actions</th>
                        <%}%>
                    </tr>
                    </thead>
                    <tbody>
                    <% users.forEach(function(user){ %>
                    <tr>
                        <td class="text-center">
                            <% if(viewer.email === user.email){%><!-- If you see yourself, just see a link to 'My Profile'-->
                            <a href="/myProfile" class="label label-info"
                               role="button">My Profile</a>
                            <%} else if(viewer.isAdmin){%><!-- If an admin is viewing, they can add users -->
                            <a href="/user/<%= user._id %>/viewProfile" class="label label-info"
                               role="button">View</a>
                            <a href="/user/<%= user._id %>/deleteUser" class="label label-danger"
                               role="button">Delete</a>
                            <%} else {%><!-- Everyone else just sees the option to view -->
                            <a href="/user/<%= user._id %>/viewProfile" class="label label-info"
                               role="button">View</a>
                        <%}%>
                        </td>
                        <td><%= user.email %></td><!-- Badges for extra information -->
                            <td><% if(user.isAdmin){%><span style="padding: 8px; margin-left: 10px;" class="badge"> Admin </span><%}%>
                            <% if(user.email === email){%><span style="padding: 8px; margin-left: 10px;" class="badge"> Me </span><%}%></td>

                        <td><%= (user.name?user.name:"-") %></td>
                        <td><%= (user.slack?user.slack:"-") %></td>
                        <% if(viewer.isAdmin){%><!-- If an admin is viewing, they can change permissions for other users-->
                        <td>
                            <% if(user.isAdmin){ %>
                            <a href="/user/<%= user._id %>/revokeAdmin"
                               class="label label-danger" role="button">Revoke Admin</a>
                            <%} else{%>
                            <a href="/user/<%= user._id %>/makeAdmin"
                               class="label label-warning" role="button">Make Admin</a>
                            <%}%>
                        </td>
                        <%}%>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>