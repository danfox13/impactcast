<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/style.css">
    <script src="/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
<% include ../templates/header.ejs %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <div class="row">

            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h1><%= heading %></h1>
            </div>
            <div class="col-sm-4">
                <% if(viewer.isAdmin){%>
                <a href="/addUser" class="btn btn-success"
                   role="button" style="width: 100%; height: 100%;">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add User</a>
                <%}%>
            </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th class="text-center">
                        <% if(viewer.isAdmin){%>
                        User Actions
                        <%} else {%>
                        View User
                        <%}%>
                        </th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Slack Handle</th>
                        <% if(viewer.isAdmin){%>
                        <th>Admin Actions</th>
                        <%}%>
                    </tr>
                    </thead>
                    <tbody>
                    <% users.forEach(function(user){ %>
                    <tr>
                        <td class="text-center">
                            <% if(viewer.email === user.email){%>
                            <a href="/myProfile" class="btn btn-success"
                               role="button">My Profile</a>
                            <%} else if(viewer.isAdmin){%>
                            <a href="/user/<%= user._id %>/viewProfile" class="btn btn-success"
                               role="button">View</a>
                            <a href="/user/<%= user._id %>/deleteUser" class="btn btn-danger"
                               role="button">Delete</a>
                            <%} else {%>
                            <a href="/user/<%= user._id %>/viewProfile" class="btn btn-success"
                               role="button">View</a>
                        <%}%>
                        </td>
                        <td><%= user.email %>
                            <% if(user.isAdmin){%><span style="padding: 8px; margin-left: 10px;" class="badge"> Admin </span><%}%>
                            <% if(user.email === email){%><span style="padding: 8px; margin-left: 10px;" class="badge"> Me </span><%}%>
                        </td>
                        <td><%= (user.name?user.name:"-") %></td>
                        <td><%= (user.slack?user.slack:"-") %></td>
                        <% if(viewer.isAdmin){%>
                        <td>
                            <% if(user.isAdmin){ %>
                            <a href="/user/<%= user._id %>/revokeAdmin" style="padding: 8px;"
                               class="label label-danger" role="button">Revoke Admin</a>
                            <%} else{%>
                            <a href="/user/<%= user._id %>/makeAdmin" style="padding: 8px;"
                               class="label label-warning" role="button">Make Admin</a>
                            <%}%>
                        </td>
                        <%}%>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>