<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <script src="/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
<% include ../templates/header.ejs %>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading text-cente"><h1>Edit Profile</h1></div>

        <div class="panel-body">

            <form>
                <div class="form-group">
                    <h3>Change Username:</h3>
                    <label>Username:</label>
                    <div class="input-group">
                        <span class="input-group-addon">T</span>
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                    <p></p>
                    <input type="submit" value="submit change" class="btn btn-success btn-m btn-black">
                </div>

            </form>

            <form action="/user/changePassword" method="post" data-toggle="validator" role="form">
                <div class="form-group">
                    <h3>Change Password:</h3>
                    <label>Old Password:</label>
                    <div class="input-group">
                        <span class="input-group-addon">T</span>
                        <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                    </div>
                    <label>New Password:</label>
                    <div class="input-group">
                        <span class="input-group-addon">T</span>
                        <input type="password" class="form-control" id="newPassword" name="newPassword">
                    </div>
                    <label>Reenter New Password:</label>
                    <div class="input-group">
                        <span class="input-group-addon">T</span>
                        <input type="password" class="form-control" id="newPasswordCheck" name="newPasswordCheck">
                    </div>
                    <p></p>
                    <input type="submit" value="submit change" class="btn btn-success btn-m btn-black">
                </div>
            </form>


            <form>
                <div class="form-group">
                    <h3>Change Slack Handle:</h3>
                    <label>Slack Handle</label>
                    <div class="input-group">
                        <span class="input-group-addon">T</span>
                        <input type="text" class="form-control" id="newSlackHandle" name="newSlackHandle">
                    </div>
                    <p></p>
                <input type="submit" value="submit change" class="btn btn-success btn-m btn-black">
                </div>
            </form>
        </div>
    </div>

</div>
</body>
</html>


